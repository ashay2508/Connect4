         <children>
            <TextField fx:id="p1textfield" alignment="CENTER" prefHeight="31.0" prefWidth="285.0" promptText="Enter Player One" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="35.0" />
